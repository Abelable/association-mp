.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
  opacity: 0;
  transition: opacity .2s ease;
}
.mask.show {
  opacity: 1;
}

.popup {
  position: fixed;
  top: 0; 
  left: 0;
  padding: 32rpx;
  width: 576rpx;
  height: 100vh;
  max-width: 100vh;
  background: #fff;
  overflow: hidden;
  z-index: 100;
  transform: translateX(-100%);
  transition: transform .2s ease;
}
.popup.show {
  transform: translateX(0);
  transition: transform .3s ease;
}

.user-info {
  display: flex;
  align-items: center;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
}
.name {
  margin-left: 24rpx;
  color: #222;
  font-size: 36rpx;
  font-weight: 550;
}

.menu-list {
  margin-top: 80rpx;
}
.menu-item {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}
.menu-icon {
  width: 48rpx;
  height: 48rpx;
}
.menu-content {
  margin-left: 20rpx;
  flex: 1;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
}
