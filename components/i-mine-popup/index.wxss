.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
  opacity: 0;
  transition: opacity .2s ease;
}
.mask.show {
  opacity: 1;
}

.popup {
  position: fixed;
  top: 0; 
  left: 0;
  padding: 32rpx;
  width: 576rpx;
  height: 100vh;
  max-width: 100vh;
  background: #fff;
  overflow: hidden;
  z-index: 100;
  transform: translateX(-100%);
  transition: transform .2s ease;
}
.popup.show {
  transform: translateX(0);
  transition: transform .3s ease;
}

.user-info {
  display: flex;
  align-items: center;
}
.user-info-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-info-name {
  margin-left: 24rpx;
  color: #222;
  font-size: 36rpx;
  font-weight: 550;
}

.menu-list {
  margin-top: 80rpx;
}
.menu-item {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}
.menu-icon {
  width: 48rpx;
  height: 48rpx;
}
.menu-content {
  margin-left: 20rpx;
  flex: 1;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
}

.modal-wrap {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  z-index: 100;
}
.modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
}
.auth {
  padding: 50rpx;
  width: 670rpx;
  border-radius: 30rpx;
}
.auth-tips {
  position: relative;
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.auth-modal-list-wrap {
  margin-top: 50rpx;
}
.auth-modal-list {
  display: flex;
  align-items: center;
  height: 140rpx;
  border-bottom: 1px solid #f5f5f5;
}
.auth-modal-list:first-child {
  border-top: 1px solid #f5f5f5;
}
.modal-list-title {
  margin-right: 30rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.avatar-wrapper {
  flex: 1;
  height: 100rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}
.more-icon {
  width: 24rpx;
  height: 24rpx;
}
.nickname-input {
  flex: 1;
  font-size: 28rpx;
}

.to-auth {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx auto 0;
  width: 464rpx;
  height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  background: linear-gradient(180deg, #3FABFB 0%, #317BFF 100%);
}
