.swiper-wrap {
  position: relative;
}
.swiper {
  height: 220px;
}
.banner-img {
  width: 100%;
  height: 100%;
}

.container {
  padding: 24rpx 24rpx calc(124rpx + env(safe-area-inset-bottom));
}
.content-wrap {
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
}
.title {
  margin-bottom: 16rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.content {
  margin-bottom: 48rpx;
  color: #333;
  font-size: 26rpx;
}
.content.address {
  margin-bottom: 0;
  color: #317BFF;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  background: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}
.footer-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100rpx;
  color: #333;
  font-size: 28rpx;
}
.icon {
  margin-right: 12rpx;
  width: 42rpx;
  height: 42rpx;
}
