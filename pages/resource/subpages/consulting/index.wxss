.container {
  padding: 24rpx;
}

.form {
  padding: 0 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.form-item {
  padding: 32rpx 0;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}
.form-item:last-child {
  border-bottom: none;
}
.form-label {
  width: 160rpx;
  color: #333;
  font-weight: bold;
}
.form-input {
  flex: 1;
}
.form-textarea {
  margin-top: 24rpx;
  padding: 18rpx;
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  height: 96rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 48rpx;
  background: #3FABFB;
}
