<view class="container">
  <view class="form">
    <view class="form-item row">
      <view class="form-label">联系姓名：</view>
      <input class="form-input" bindinput="setName" placeholder="请输入您的姓名" />
    </view>
    <view class="form-item row">
      <view class="form-label">联系方式：</view>
      <input class="form-input" bindinput="setMobile" placeholder="请输入您的手机号" />
    </view>
    <view class="form-item row">
      <view class="form-label">单位名称：</view>
      <input class="form-input" bindinput="setCompanyName" placeholder="请输入您的单位名称" />
    </view>
    <view class="form-item">
      <view class="form-label">咨询问题：</view>
      <textarea class="form-textarea" bindinput="setContent" rows="5" cols="40" placeholder="请输入您想咨询的内容" />
    </view>
  </view>
  
  <view class="submit-btn" bindtap="submit">提交</view>
</view>
