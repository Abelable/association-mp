.album-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.album-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.album-time-wrap {
  margin-top: 12rpx;
}
.album-position {
  color: #3BA0FB;
  font-size: 26rpx;
  font-weight: bold;
}
.position-icon {
  margin-right: 6rpx;
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.album-time {
  color: #333;
  font-size: 26rpx;
}
