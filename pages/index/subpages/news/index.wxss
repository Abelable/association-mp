.btn-wrap {
  position: fixed;
  right: 40rpx;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
}
.btn {
  margin-top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  font-size: 0;
  text-align: center;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2);
}
.icon {
  margin-top: 16rpx;
  width: 40rpx;
  height: 40rpx;
}
.desc {
  color: #333;
  font-size: 24rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
}
.mask.dark {
  background: rgba(0, 0, 0, 0.8);
}

.share-popup {
  position: fixed;
  left: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100vw;
  background: #fff;
  transform: translateY(100%);
  transition: transform .2s ease;
}
.share-popup.show {
  transform: translateY(0);
  transition: transform .2s ease;
}
.share-btn-wrap {
  display: flex;
  padding: 40rpx;
  border-bottom: 8rpx solid #f7f7f7;
}
.share-btn {
  flex: 1;
  font-size: 0;
  text-align: center;
}
.share-btn-icon {
  width: 104rpx;
  height: 104rpx;
}
.share-btn-desc {
  margin-top: 20rpx;
  color: #333;
  font-size: 24rpx;
}
.cancle-btn {
  height: 94rpx;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  line-height: 94rpx;
}

.tips-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
}
.tips-cover-icon {
  position: absolute;
  top: 460rpx;
  left: 360rpx;
  width: 200rpx;
  height: 142rpx;
}
.tips-cover-desc {
  position: absolute;
  top: 680rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 32rpx;
}