<wxs module="TIME" src="../../../../utils/filters/time.wxs" />
<import src="/templates/i-youbo-logo/index.wxml" />

<view class="news-detail {{fold ? 'fold' : '' }}">
  <view class="title">{{item.title}}</view>
  <view class="time">{{TIME.transform(item.updated_at).year + '-' + TIME.transform(item.updated_at).month + '-' + TIME.transform(item.updated_at).date + ' ' + TIME.transform(item.updated_at).hours + ':' + TIME.transform(item.updated_at).minutes}}</view>
  <rich-text class="content" nodes="{{item.content}}" />
  <template is="i-youbo-logo" />

  <view class="fold-mask" wx:if="{{fold}}">
    <image class="arrow" src="./images/arrow.png" />
    <view class="unfold-btn" ontap="unfold">点击查看全文</view>
  </view>
</view>
