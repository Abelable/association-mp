@import "/templates/i-youbo-logo/index.wxss";

.news-detail {
  padding: 10rpx 32rpx;
  background: #fff;
}
.news-detail.fold {
  position: relative;
  height: 100vh;
  overflow: hidden;
}
.title {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 56rpx;
}
.time {
  margin-top: 6rpx;
  color: #999;
  font-size: 24rpx;
}
.content {
  color: #666;
  font-size: 28rpx;
}

.fold-mask {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: calc(220rpx + env(safe-area-inset-bottom));
  text-align: center;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.89) 24%, #FFFFFF 100%);
}
.arrow {
  margin-top: 70rpx;
  width: 32rpx;
  height: 32rpx;
  animation: bounce 2s infinite;
}
@keyframes bounce {
  0% {
      transform: translate(0, 0);
  }
  50% {
      transform: translate(0, -10rpx);
  }
  100% {
      transform: translate(0, 0);
  }
}
.unfold-btn {
  margin: 12rpx auto;
  width: 380rpx;
  height: 64rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 64rpx;
  background: linear-gradient(180deg, #3FABFB 0%, #317BFF 100%);
  border-radius: 32rpx;
}
