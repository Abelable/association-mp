.container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  height: 308rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.title {
  position: relative;
  height: 88rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 88rpx;
  background: #FBFBFB;
}
.close-icon {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

.pay-box {
  margin: 50rpx 56rpx 0;
  display: flex;
  justify-content: space-around;
}

.password-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 16rpx;
}

.cursor {
  width: 2rpx;
  height: 36rpx;
  background-color: #333;
  animation: focus 1.2s infinite;
}

@keyframes focus {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.input-black-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #000;
  border-radius: 50%;
}

.error-tips {
  margin-top: 24rpx;
  margin-left: 56rpx;
  color: #EA3C30;
  font-size: 24rpx;
}

.hidden-input {
  position: absolute;
  left: -100%;
}
