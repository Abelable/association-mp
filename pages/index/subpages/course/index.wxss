@import "/templates/i-empty-illus/index.wxss";

.menu-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 100;
}

.search-bar {
  padding: 9px 24rpx;
  background: #fff;
}
.search-content {
  position: relative;
  padding-right: 120rpx;
  height: 36px;
  background: #fff;
  border-radius: 18px;
  border: 1px solid #3BA0FB;
}
.search-icon {
  margin-left: 20rpx;
  width: 30rpx;
  height: 15px;
}
.search-input {
  padding-left: 10rpx;
  flex: 1;
  height: 36px;
  color: #333;
  font-size: 13px;
}
.cancel-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 30px;
}
.cancel-icon {
  width: 16px;
  height: 16px;
}
.search-btn {
  position: absolute;
  top: -1px;
  right: -1px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 36px;
  font-size: 13px;
  color: #fff;
  border-radius: 18px;
  background: #3BA0FB;
}

.sub-menu-wrap {
  display: flex;
  align-items: center;
  background: #fff;
}
.sub-menu {
  flex: 1;
  overflow-y: scroll;
  white-space: nowrap;
}
.sub-menu-item {
  display: inline-block;
  width: 80px;
  height: 44px;
  color: #6A6F75;
  font-size: 13px;
  text-align: center;
  line-height: 44px;
}
.sub-menu-item.active {
  color: #3BA0FB;
  font-weight: bold;
}
.all-sub-menu-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  border-left: 1px solid #eee;
}
.filter-icon {
  width: 14px;
  height: 14px;
}

.filter-menu {
  display: flex;
  background: #fff;
}
.filter-menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 44px;
  color: #6A6F75;
  font-size: 13px;
}
.down-arrow {
  margin-left: 6px;
  width: 16px;
  height: 16px;
}

.course-list {
  position: relative;
  margin-top: 98px;
  padding: 24rpx;
  min-height: 100vh;
}

.course-item {
  margin-bottom: 24rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.course-item:last-child {
  border-bottom: none;
}

.empty-illus-wrap {
  margin: 240rpx auto 0;
  width: fit-content;
}

.apply-tips {
  margin-top: 32rpx;
  color: #3C3F42;
  font-size: 24rpx;
  text-align: center;
}

.cxxq-logo-wrap {
  margin-top: 100rpx;
}
