@import "/templates/i-empty-illus/index.wxss";

.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
}
.search-input-wrap {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  flex: 1;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}
.search-icon {
  margin-right: 10rpx;
  width: 24rpx;
  height: 24rpx;
}
.search-input {
  font-size: 26rpx;
}
.search-btn {
  margin-left: 30rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.menu-bar {
  padding-bottom: 24rpx;
  white-space: nowrap;
}
.menu-item {
  display: inline-block;
  margin-left: 60rpx;
  padding-bottom: 10rpx;
  color: #333;
  font-size: 32rpx;
}
.menu-item.active {
  position: relative;
  color: #408BF1;
  font-weight: 550;
}
.menu-item.active::after {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 88rpx;
  height: 4rpx;
  content: "";
  background: #408BF1;
}
.menu-item:first-child {
  margin-left: 30rpx;
}
.menu-item:last-child {
  margin-right: 30rpx;
}

.main {
  display: flex;
  height: 100%;
}

.side-bar {
  width: 172rpx;
  height: 100%;
  background: #F8F8F8;
}
.sub-menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  color: #999;
  font-size: 28rpx;
}
.sub-menu-item.active {
  color: #fff;
  font-weight: 550;
  background: #408BF1;
}

.content {
  flex: 1;
  height: 100%;
}

.content {
  padding: 0 30rpx 200rpx;
}
.article-item {
  padding: 20rpx 0;
  background: #fff;
  border-radius: 12rpx;
  border-bottom: 1px solid #F4F5F6;
}
.title {
  color: #333;
  font-size: 30rpx;
  font-weight: 550;
}
.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}
.time {
  color: #999;
  font-size: 24rpx;
}
.data-wrap {
  display: flex;
  align-items: center;
}
.data {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}
.icon {
  margin-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
}

.empty-illus-wrap {
  margin: 240rpx auto 0;
  width: fit-content;
}
