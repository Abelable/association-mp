@import "/templates/i-youbo-logo/index.wxss";

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  line-height: 44px;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.show {
  background: linear-gradient(180deg, #3FABFB 0%, #317BFF 100%);
}

.swiper-wrap {
  position: relative;
  margin: 20rpx 30rpx;
}
.swiper {
  height: 300rpx;
}
.banner-img {
  width: 690rpx;
  height: 300rpx;
  border-radius: 12rpx;
}
.bg {
  position: absolute;
  left: 0;
  width: 100%;
  height: 400rpx;
  z-index: -1;
}

.menu-wrap {
  white-space: nowrap;
  height: 88rpx;
  overflow-x: scroll;
}
.menu-item {
  display: inline-block;
  width: 250rpx;
  height: 88rpx;
  color: #999;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
}
.menu-item.selected {
  position: relative;
  color: #3382FF;
  font-weight: bold;
}
.menu-item.selected::after {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
  width: 90rpx;
  height: 4rpx;
  content: '';
  border-radius: 2rpx;
  background: #3483FF;
}

.menu-wrap.fixed {
  position: fixed;
  width: 100%;
  background: #327EFF;
}
.menu-wrap.fixed .menu-item {
  color: #fff;
}
.menu-wrap.fixed .menu-item.selected {
  color: #fff;
}
.menu-wrap.fixed .menu-item.selected::after {
  background: #fff;
}

.news-list-wrap {
  padding: 16rpx 30rpx 1rpx;
}
.news-list-wrap.fixed {
  padding-top: 104rpx;
}
