.bg {
  position: absolute;
  left: 0;
  width: 100%;
  height: 500rpx;
  z-index: -1;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.show {
  background: linear-gradient(180deg, #3FABFB 0%, #317BFF 100%);
}
.nav-bar-main {
  flex: 1;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  line-height: 44px;
}
.nav-bar-side {
  width: 40px;
}
.menu-icon {
  margin-top: 2px;
  margin-left: 16px;
  width: 20px;
  height: 20px;
}

.container {
  padding: 10rpx 30rpx 30rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 68rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.search-icon {
  margin-left: 20rpx;
  margin-right: 15rpx;
  width: 30rpx;
  height: 30rpx;
}
.search-placeholder {
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.search-btn {
  padding: 0 20rpx;
  color: #408BF1;
  font-size: 28rpx;
  font-weight: bold;
  border-left: 2rpx solid #F0F0F0;
}

.swiper-wrap {
  position: relative;
  margin-top: 30rpx;
}
.swiper {
  height: 300rpx;
}
.banner-img {
  width: 690rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.member-card {
  display: block;
  margin-top: 30rpx;
  width: 100%;
  height: 166rpx;
  border-radius: 78rpx;
}

.title-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.title {
  position: relative;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.title::after {
  position: absolute;
  left: 0;
  bottom: 0;
  content: "";
  width: 64rpx;
  height: 8rpx;
  background: #408BF1;
}
.more-btn {
  display: flex;
  align-items: center;
  color: #408BF1;
  font-size: 28rpx;
}
.right-arrow {
  width: 32rpx;
  height: 32rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.certificate-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.certificate {
  width: 560rpx;
}
.download-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto 0;
  width: 360rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: #317BFF;
}
