@import "/templates/i-youbo-logo/index.wxss";

.bg {
  position: absolute;
  left: 0;
  width: 100%;
  height: 500rpx;
  z-index: -1;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  line-height: 44px;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.show {
  background: linear-gradient(180deg, #3FABFB 0%, #317BFF 100%);
}

.container {
  padding: 10rpx 30rpx 30rpx;
  min-height: calc(100vh - 200rpx);
}

.search-bar {
  display: flex;
  align-items: center;
  height: 68rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.search-type {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.down-arrow {
  margin-left: 4rpx;
  width: 24rpx;
  height: 24rpx;
}
.search-placeholder {
  margin-left: 20rpx;
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.search-btn {
  padding: 0 20rpx;
  color: #408BF1;
  font-size: 28rpx;
  font-weight: bold;
  border-left: 2rpx solid #F0F0F0;
}

.swiper-wrap {
  position: relative;
  margin-top: 30rpx;
}
.swiper {
  height: 300rpx;
}
.banner-img {
  width: 690rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.title-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.title {
  position: relative;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.title::after {
  position: absolute;
  left: 0;
  bottom: 0;
  content: "";
  width: 64rpx;
  height: 8rpx;
  background: #408BF1;
}
.more-btn {
  display: flex;
  align-items: center;
  color: #408BF1;
  font-size: 28rpx;
}
.right-arrow {
  width: 32rpx;
  height: 32rpx;
}
