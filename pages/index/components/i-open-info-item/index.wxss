.open-info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.cover {
  width: 200rpx;
  height: 140rpx;
  border-radius: 8rpx;
}

.content-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
  flex: 1;
  height: 140rpx;
}

.title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.time {
  color: #A1A9B3;
  font-size: 24rpx;
}

