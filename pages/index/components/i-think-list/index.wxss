.think-list {
  margin-top: 20rpx;
  padding: 10rpx 20rpx 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}
.think-item {
  display: flex;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}
.avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.content-wrap {
  margin-left: 20rpx;
  flex: 1;
}
.name-wrap {
  display: flex;
  align-items: baseline;
}
.name {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.title {
  margin-left: 10rpx;
  color: #333;
  font-size: 24rpx;
}
.honor {
  margin-top: 10rpx;
  color: #333;
  font-size: 24rpx;
}
.field {
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.more-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 28rpx;
  color: #333;
  font-size: 26rpx;
}
.down-arrow {
  margin-left: 4rpx;
  width: 24rpx;
  height: 24rpx;
}