.low-list {
  margin-top: 20rpx;
  padding: 20rpx;
  white-space: nowrap;
  background: #FFFFFF;
  border-radius: 12rpx;
}
.low-item {
  display: inline-block;
  width: 220rpx;
  height: 330rpx;
  margin-right: 20rpx;
}
.cover {
  width: 220rpx;
  height: 250rpx;
  border-radius: 8rpx;
  background: #f9f9f9;
}
.title {
  margin-top: 12rpx;
  color: #333;
  font-size: 24rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
