@import "/templates/i-youbo-logo/index.wxss";

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding-left: 10px;
  padding-right: 30px;
  width: calc(100vw - 40px);
  height: 44px;
  box-sizing: initial;
  background: linear-gradient(180deg, #3FABFB 0%, #317BFF 100%);
  z-index: 100;
}
.back-icon {
  width: 20px;
  height: 20px;
}
.title {
  flex: 1;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}


.record-item {
  margin-bottom: 10px;
  padding: 0 28rpx;
  background: #fff;
  border-radius: 12rpx;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}
.company-name {
  padding-right: 20rpx;
  flex: 1;
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.status {
  color: #3D84F5;
  font-size: 28rpx;
}
.status.done {
  color: #999;
}
.status.reject {
  color: #FF3838;
}
.content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24rpx 0;
  height: 160rpx;
  border-top: 1px solid #F2F2F2;
  border-bottom: 1px solid #F2F2F2;
}
.info-list {
  display: flex;
  align-items: center;
}
.label {
  width: 200rpx;
  color: #333;
  font-size: 30rpx;
}
.info {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}
.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}
.time {
  color: #999;
  font-size: 28rpx;
}
.btn {
  padding: 0 32rpx;
  height: 56rpx;
  color: #3382FE;
  font-size: 28rpx;
  line-height: 52rpx;
  border-radius: 28rpx;
  border: 2rpx solid #3382FE;
}

.empty-illus {
  margin: 140rpx auto;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
.illus {
  width: 400rpx;
  height: 400rpx;
}
