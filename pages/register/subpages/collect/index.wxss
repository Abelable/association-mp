page {
  background: #fff;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
}
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.search-input-wrap {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  flex: 1;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}
.search-icon {
  margin-right: 10rpx;
  width: 24rpx;
  height: 24rpx;
}
.search-input {
  flex: 1;
  font-size: 26rpx;
}
.clear-icon {
  margin-left: 10rpx;
  width: 32rpx;
  height: 32rpx;
}
.search-btn {
  margin-left: 30rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.menu-bar {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 40rpx 16rpx;
}
.menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 56rpx;
  color: #333;
  font-size: 24rpx;
  border-radius: 4rpx;
  background: #F8F8F8;
}
.menu-item.active {
  color: #fff;
  background: #408BF1;
}

.content {
  padding-top: 202rpx;
  min-height: calc(100vh - 150rpx);
}
.collect-list {
  padding: 0 30rpx;
  overflow: hidden;
}
.collect-item {
  padding: 20rpx 0;
  background: #fff;
  border-radius: 12rpx;
  border-bottom: 1px solid #F4F5F6;
}
.title {
  color: #333;
  font-size: 30rpx;
  font-weight: 550;
}
.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}
.time {
  color: #999;
  font-size: 24rpx;
}
.data-wrap {
  display: flex;
  align-items: center;
}
.data {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}
.icon {
  margin-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
}

.empty-illus {
  margin: 300rpx auto 0;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
.illus {
  width: 400rpx;
  height: 400rpx;
}
