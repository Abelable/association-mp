<import src="/templates/i-youbo-logo/index.wxml" />

<view class="nav-bar" style="padding-top: {{statusBarHeight}}px;">入会申请</view>

<view class="form-wrap" style="margin-top: {{statusBarHeight + 44}}px">
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>企业名称</text>
    </view>
    <input class="input" type="text" value="{{companyName}}" bindinput="setCompanyName" placeholder="请输入企业名称"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>网站（app）名称</text>
    </view>
    <input class="input" type="text" value="{{websiteUrl}}" bindinput="setWebsiteUrl" placeholder="请输入网站（app）名称"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>ICP备案号</text>
    </view>
    <input class="input" type="text" value="{{ICP}}" bindinput="setICP" placeholder="请输入ICP备案号"/>
  </view>
  <view class="selection-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>企业类型（可多选）</text>
    </view>
    <checkbox-group class="selection" bindchange="setCompanyType">
      <view class="option">
        <checkbox id="1" value="第三方平台"/>
        <label class="desc" for="1">第三方平台</label>
      </view>
      <view class="option">
        <checkbox id="2" value="自营平台" />
        <label class="desc" for="2">自营平台</label>
      </view>
      <view class="option">
        <checkbox id="3" value="非平台" />
        <label class="desc" for="3">非平台</label>
      </view>
    </checkbox-group>
  </view>
  <view class="selection-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>网站电子商务类型（可多选）</text>
    </view>
    <checkbox-group class="selection" bindchange="setWebsiteType">
      <view class="option">
        <checkbox id="4" value="B2B"/>
        <label class="desc" for="4">B2B</label>
      </view>
      <view class="option">
        <checkbox id="5" value="B2C" />
        <label class="desc" for="5">B2C</label>
      </view>
      <view class="option">
        <checkbox id="6" value="C2C" />
        <label class="desc" for="6">C2C</label>
      </view>
      <view class="option">
        <checkbox id="7" value="G2C" />
        <label class="desc" for="7">G2C</label>
      </view>
      <view class="option">
        <checkbox id="8" value="其他" />
        <label class="desc" for="8">其他</label>
      </view>
    </checkbox-group>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>员工人数和党员人数</text>
    </view>
    <input class="input" type="number" value="{{staffCount}}" bindinput="setStaffCount" placeholder="请输入员工人数和党员人数"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>交易商品（服务）</text>
    </view>
    <input class="input" type="text" value="{{tradeCommodity}}" bindinput="setTradeCommodity" placeholder="请输入交易商品（服务）"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text>注册会员数量（个）</text>
    </view>
    <input class="input" type="number" value="{{memberCount}}" bindinput="setMemberCount" placeholder="请输入注册会员数量"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text>平台网站内经营者数量（个）</text>
    </view>
    <input class="input" type="number" value="{{operatorCount}}" bindinput="setOperatorCount" placeholder="请输入平台网站内经营者数量"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>上年交易笔数(笔)</text>
    </view>
    <input class="input" type="number" value="{{tradeCount}}" bindinput="setTradeCount" placeholder="请输入上年交易笔数"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>上年交易额(元)</text>
    </view>
    <input class="input" type="number" value="{{tradeAmount}}" bindinput="setTradeAmount" placeholder="请输入上年交易额"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>负责人姓名</text>
    </view>
    <input class="input" type="text" value="{{name}}" bindinput="setName" placeholder="请输入负责人姓名"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>职务</text>
    </view>
    <input class="input" type="text" value="{{jobTitle}}" bindinput="setJobTitle" placeholder="请输入职务"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>政治面貌</text>
    </view>
    <input class="input" type="text" value="{{pliticalStatus}}" bindinput="setpPliticalStatus" placeholder="请输入政治面貌"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>手机</text>
    </view>
    <input class="input" type="number" value="{{tel}}" bindinput="setTel" placeholder="请输入手机"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>邮箱</text>
    </view>
    <input class="input" type="text" value="{{email}}" bindinput="setEmail" placeholder="请输入邮箱"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>协会联系人姓名</text>
    </view>
    <input class="input" type="text" value="{{contacterName}}" bindinput="setContacterName" placeholder="请输入协会联系人姓名"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>职务</text>
    </view>
    <input class="input" type="text" value="{{contacterJobTitle}}" bindinput="setContacterJobTitle" placeholder="请输入职务"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>手机</text>
    </view>
    <input class="input" type="number" value="{{contacterTel}}" bindinput="setContacterTel" placeholder="请输入手机"/>
  </view>
  
