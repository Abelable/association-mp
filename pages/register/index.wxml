<import src="/templates/i-youbo-logo/index.wxml" />

<view class="nav-bar" style="padding-top: {{statusBarHeight}}px;">
  <view class="record" ontap="navToRecord">申请记录</view>
  <view class="nav-bar-title">入会申请</view>
</view>

<view class="form-wrap" style="margin-top: {{statusBarHeight + 44}}px">
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>企业名称</text>
    </view>
    <input class="input" type="text" value="{{companyName}}" bindinput="setCompanyName" placeholder="请输入企业名称"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>网站（app）名称</text>
    </view>
    <input class="input" type="text" value="{{websiteUrl}}" bindinput="setWebsiteUrl" placeholder="请输入网站（app）名称"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>ICP备案号</text>
    </view>
    <input class="input" type="text" value="{{ICP}}" bindinput="setICP" placeholder="请输入ICP备案号"/>
  </view>
  <view class="selection-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>企业类型（可多选）</text>
    </view>
    <checkbox-group class="selection" bindchange="setCompanyType">
      <view 
        class="option" 
        wx:for="{{['网络销售类平台', '生活服务类平台', '社交娱乐类平台', '信息资讯类平台', '金融服务类平台', '计算机应用类平台', '其它类']}}"
        wx:key="index"
        >
        <checkbox id="{{index + 1}}" value="{{item}}"/>
        <label class="desc" for="{{index + 1}}">{{item}}</label>
      </view>
    </checkbox-group>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>上年度GMV（元）</text>
    </view>
    <input class="input" type="number" value="{{tradeAmount}}" bindinput="setTradeAmount" placeholder="请输入上年度GMV"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>上年度营收（元）</text>
    </view>
    <input class="input" type="number" value="{{revenue}}" bindinput="setRevenue" placeholder="请输入上年度营收"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>员工人数</text>
    </view>
    <input class="input" type="number" value="{{staffCount}}" bindinput="setStaffCount" placeholder="请输入员工人数"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>党员人数</text>
    </view>
    <input class="input" type="number" value="{{gangCount}}" bindinput="setGangCount" placeholder="请输入党员人数"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>企业负责人姓名</text>
    </view>
    <input class="input" type="text" value="{{name}}" bindinput="setName" placeholder="请输入企业负责人姓名"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>职务</text>
    </view>
    <input class="input" type="text" value="{{jobTitle}}" bindinput="setJobTitle" placeholder="请输入职务"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>政治面貌</text>
    </view>
    <input class="input" type="text" value="{{pliticalStatus}}" bindinput="setpPliticalStatus" placeholder="请输入政治面貌"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>手机</text>
    </view>
    <input class="input" type="number" value="{{tel}}" bindinput="setTel" placeholder="请输入手机"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>协会联系人姓名</text>
    </view>
    <input class="input" type="text" value="{{contacterName}}" bindinput="setContacterName" placeholder="请输入协会联系人姓名"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>职务</text>
    </view>
    <input class="input" type="text" value="{{contacterJobTitle}}" bindinput="setContacterJobTitle" placeholder="请输入职务"/>
  </view>
  <view class="input-wrap">
    <view class="title">
      <text class="required-icon">*</text>
      <text>手机</text>
    </view>
    <input class="input" type="number" value="{{contacterTel}}" bindinput="setContacterTel" placeholder="请输入手机"/>
  </view>
</view>

<view class="upload-wrap">
  <view class="title">
    <text class="required-icon">*</text>
    <text>企业营业执照或副本</text>
    <text class="upload-tips"> 图片大小不能超过10MB</text>
  </view>
  <view style="margin-top: 30rpx;">
    <van-uploader file-list="{{fileList}}" max-count="3" bind:after-read="afterRead" bind:delete="deleteFile" />
  </view>
</view>

<view class="submit-btn" ontap="submit">提交</view>

<view class="notice-title">填表须知</view>
<view class="notice">
  <view class="notice-detail-title">1.申请入会需如实完整填写此表</view>
  <view class="notice-detail-title">2.联系方式</view>
  <view class="notice-detail-content">电话：0571-89769991；</view>
  <view class="notice-detail-content">邮箱：2264745919@qq.com</view>
  <view class="notice-detail-content">地址：杭州市莫干山路77号金汇大厦北门 浙江省网商协会</view>
  <view class="notice-detail-content">邮编：310005</view>
</view>

