</view>

<view class="upload-wrap">
  <view class="title">
    <text class="required-icon">*</text>
    <text>企业营业执照或副本</text>
  </view>
  <view class="upload" ontap="uploadLicense">
    <view wx:if="{{!licenseImg}}">
      <view class="upload-btn">
        <image class="upload-icon" src="./images/upload-icon.png" />
        <view>点击上传</view>
      </view>
      <view class="upload-tips">图片大小不能超过10MB</view>
    </view>
    <image class="license-img" wx:if="{{licenseImg}}" src="{{licenseImg}}" mode="widthFix" />
  </view>
</view>

<view class="submit-btn" ontap="submit">提交</view>

