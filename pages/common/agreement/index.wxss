.container {
  padding: 20rpx;
  background-color: #ffffff;
  color: #333333;
  font-size: 28rpx;
  line-height: 42rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 30rpx;
}

.content-wrap {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.sub-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 15rpx;
}

.content {
  font-size: 28rpx;
  color: #4d4d4d;
  line-height: 40rpx;
  white-space: pre-wrap;
}

.content br {
  line-height: 12rpx;
}
