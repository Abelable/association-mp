page {
  font-family: PingFangSC-Regular, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  background: #f7f7f7;
}

view, image, scroll-view, navigator, swiper, swiper-item {
  box-sizing: border-box;
}
textarea, input {
  z-index: 0;
}
button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  position: static;
  border: 0;
  border-radius: 0;
  font-size: 0;
  color: transparent;
  text-align: left;
}
button::after {
  content: '';
  width: 0;
  height: 0;
  display: none;
  background-color: transparent;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.small-dots .wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
}
.custom-dots .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #fff;
  opacity: 0.5;
}
.custom-dots .wx-swiper-dot.wx-swiper-dot-active {
  width: 20rpx;
  opacity: 1;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.omit.single {
  -webkit-line-clamp: 1;
}

.row {
  display: flex;
  align-items: center;
}
